<div class="container" style="width:370px;">
{{#if errorMessage}}
  <div class="alert alert-danger alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{ errorMessage }}
  </div>
{{/if}}
<form class="form-login" action="/login" method="POST">
  <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
  <label for="inputEmail" class="sr-only">Email address</label>
  <input name="email" type="email" id="inputEmail" class="form-control mt-4" placeholder="Email address" required autofocus>
  <label for="inputPassword" class="sr-only">Password</label>
  <input name="password"  type="password" id="inputPassword" class="form-control mt-2" placeholder="Password" required>
  <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Enter</button>
</form>

</div>


