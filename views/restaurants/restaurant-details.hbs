
<nav aria-label="breadcrumb">
  <ol class="breadcrumb arr-right">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="javascript:window.history.go(-1);">Results</a></li>
    <li class="breadcrumb-item active" aria-current="page">Details</li>
  </ol>
</nav>

<div class="container">

  <div class="row">
    <div class="pr-4 pl-4 pb-4">
        <img style="width:340px;"  src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=340&photoreference={{restaurantDetails.photos.[0].photo_reference}}&key={{restaurantDetails.photos.[0].apiKey}}">
        <div class="d-flex flex-row flex-wrap" style="width:340px;">
        {{#each restaurantDetails.photos}}
        <div class="image-gallery">
          <a href="https://maps.googleapis.com/maps/api/place/photo?maxwidth=1000&photoreference={{this.photo_reference}}&key={{this.apiKey}}" data-lightbox="example-1">
            <img style="padding-right:10px; padding-bottom:10px;" src="https://maps.googleapis.com/maps/api/place/photo?maxwidth=100&photoreference={{this.photo_reference}}&key={{this.apiKey}}">
          </a>
        </div>
        {{/each}} 
    </div>
  </div>
  <div class="col pl-4">
    <h2>{{restaurantDetails.name}} <small class="price{{restaurantDetails.price_level}}"></small></h2>
    <p>{{restaurantDetails.vicinity}}</p>
    {{!-- <p>{{restaurantDetails.rating}} ({{restaurantDetails.user_ratings_total}} reviews)</p> --}}
    <p><a class="btn btn-primary mr-2" href="tel:{{restaurantDetails.formatted_phone_number}}">{{restaurantDetails.formatted_phone_number}}</a>
    
      <a class="btn btn-secondary" href="{{restaurantDetails.website}}"  target="_blank">Web</a> 
      <span id="favoriteContainer" class="{{favoriteStatus}}"></span>
      <input type="hidden" id="user" value="{{user}}">
    </p>

      <h3 style="padding-top:50px;">{{restaurantDetails.user_ratings_total}} reviews <small>({{restaurantDetails.rating}})</small></h3>
      {{#each restaurantDetails.reviews}}

       <div class="card review">
          <div class="card-body">
            	<div class="row">
                <div class="col-md-1">
                    <a href="{{author_url}}"  target="_blank"><img src="{{profile_photo_url}}"  class="img img-rounded" style="width:40px;"></a>
                    <p class="text-secondary text-center"></p>
                    </div>
                    <div class="col-md-11">
                    	<p><a href="{{author_url}}" target="_blank">
                        <strong>{{this.author_name}}</strong></a> <small>({{rating}})</small></p>
                    	<p>{{text}}</p>
                  </div>
            	</div>
          </div>
	      </div>
      {{/each}} 
    </div>
  </div>





</div>

<script type="text/javascript" src="../javascript/dist/js/lightbox.min.js"></script> 
<script type="text/javascript" src="../javascript/favorites.js"></script> 
