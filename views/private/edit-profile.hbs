
<nav aria-label="breadcrumb">
  <ol class="breadcrumb arr-right">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit</li>
  </ol>
</nav>


<div class="container" style="width:370px;">
{{#if errorMessage}}
  <div class="alert alert-danger alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    {{ errorMessage }}
  </div>
{{/if}}
<form class="form-login"action="/edit-profile?_id={{user._id}}" method="POST">
  <h1 class="h3 mb-3 font-weight-normal">Edit your profile</h1>
  <label for="name" class="sr-only mt-4">Name</label>
  <input name="name" type="text" id="inputEmail" value="{{user.name}}" class="form-control mt-2" placeholder="Name" required autofocus>
  <label for="email" class="sr-only">Email address</label>
  <input name="email" type="email" id="inputEmail" value="{{user.email}}" class="form-control mt-2" placeholder="Email address" required autofocus>
  <label for="password" class="sr-only">Password</label>
  <input name="password"  type="password" id="inputPassword" class="form-control mt-2" placeholder="Password" required>
   <label for="newPassword" class="sr-only">Password</label>
  <input name="newPassword"  type="password" id="inputPassword" class="form-control mt-2" placeholder="New password" >
 <button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Save changes</button>
</form>


